{% extends 'base.html.twig' %}

{% block title %}Link Statistic{% endblock %}

{% block body %}

{% include('default/navbar.html.twig') %}

<div class="example-wrapper">
    <table class="table">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Link</th>
            <th scope="col">To Url</th>
            <th scope="col">Transitions</th>
            <th scope="col">Lifetime</th>
            <th scope="col">Created</th>
            <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <th scope="row">{{ link.id }}</th>
                <td><a href="{{ url('homepage') ~ 'link/' ~ link.name }}" target="_blank">{{ link.name }}</a></td>
                <td><a href="{{ link.url }}" target="_blank">{{ link.url | slice(0, 35) ~ '...' }}</a></td>
                <td>{{ link.transitions }}</td>
                <td>{{ link.lifetime | date('H:i:s')}}</td>
                <td>{{ link.createAt | date('d.m.Y H:i:s') }}</td>
                <td>
                    <a href="{{ url('homepage') ~ 'link-edit/' ~ link.id }}">
                        <button class="btn-submit">Edit</button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<style>
    .example-wrapper { 
        box-shadow: 0px 0px 82px 14px rgba(0, 0, 0, 0.16);
        border-radius: 15px; 
        padding: 25px; 
        background: #ffffff30; 
        display: flex; 
        justify-content: center;
        text-align: center; 
        margin: 1em auto; 
        max-width: 1000px; 
        width: 95%; 
        font: 18px/1.5 sans-serif; 
    }
    .example-wrapper code { 
        background: #F5F5F5; 
        padding: 2px 6px; 
    }
    .btn-submit {
        background-color: #d8cec7;
        border-radius: 25px;
        border: 3px solid #a19993;
        font-size: large;
        color: #464949;
        padding-left: 15px;
        padding-right: 15px;
        padding-bottom: 3px;
        padding-top: 3px;
        transition: 1s;
        text-align: center; 
        box-shadow: 0px 0px 13px 2px rgba(0, 0, 0, 0.14);
    }
    .btn-submit:hover {
        transform: scale(1.1);
        background-color: #e2a979;
        border: 3px solid #e06b27;
    }
    table {
        font-size: 14px;
        border-radius: 10px;
        border-spacing: 0;
        padding: 8px;
        text-align: center;
    }
    th {
        background: #a19993;
        color: #ececec;
        letter-spacing: 1px;
        text-shadow: 0 1px 1px #2D2020;
        padding: 10px 20px;
    }
    th, td {
        border-style: solid;
        border-width: 0 2px 2px 0;
        border-color: #696969;
        box-shadow: 0px 0px 13px 2px rgba(0, 0, 0, 0.14);
    }
    th:first-child, td:first-child {
        text-align: left;
    }
    th:first-child {
        border-top-left-radius: 10px;
    }
    th:last-child {
        border-top-right-radius: 10px;
        border-right: none;
    }
    td {
        padding: 10px 20px;
        background: #eeee;
    }
    td a {
        color: #e06b27
    }
    tr:last-child td:first-child {
        border-radius: 0 0 0 10px;
    }
    tr:last-child td:last-child {
        border-radius: 0 0 10px 0;
    }
    tr td:last-child {
        border-right: none;
    }
</style>
{% endblock %}