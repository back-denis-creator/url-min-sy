{% extends 'base.html.twig' %}

{% block title %}Link Statistic{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% include('default/navbar.html.twig') %}

<div class="example-wrapper">
    <table class="table">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Link</th>
            <th scope="col">To Url</th>
            <th scope="col">Transitions</th>
            <th scope="col">Lifetime</th>
            <th scope="col">Created</th>
            <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <th scope="row">{{ link.id }}</th>
                <td><a href="{{ url('homepage') ~ 'link/' ~ link.name }}" target="_blank">{{ link.name }}</a></td>
                <td><a href="{{ link.url }}" target="_blank">{{ link.url }}</a></td>
                <td>{{ link.transitions }}</td>
                <td>{{ link.lifetime | date('H:i:s')}}</td>
                <td>{{ link.createAt | date('d.m.Y H:i:s') }}</td>
                <td>
                <a href="{{ url('homepage') ~ 'link-edit/' ~ link.id }}">
                Edit
                </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}